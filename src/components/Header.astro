<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		position: sticky;
		top: 0;
		display: flex;
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		flex: 1;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
		justify-content: flex-end;
	}
	.internal-links {
		flex: 1;
		display: flex;
		justify-content: center;
		width: 100%;
	}
	h2, .social-links {
		min-width: 15%;
	}
	@media (max-width: 720px) {
		h2, .social-links {
			display: none;
		}
	}
</style>
